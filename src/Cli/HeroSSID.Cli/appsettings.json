{
  "ConnectionStrings": {
    "HeroDb": "Host=localhost;Port=5432;Database=herossid;Username=herossid;Password=CHANGE_ME_IN_PRODUCTION"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "HeroSSID": "Debug"
    },
    "File": {
      "Path": "./logs/herossid-cli-.log",
      "RollingInterval": "Day",
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
    }
  },
  "Tenant": {
    "DefaultTenantId": "11111111-1111-1111-1111-111111111111",
    "Comment": "Hardcoded tenant ID for MVP - will be replaced with multi-tenancy in v2.0"
  },
  "Encryption": {
    "Type": "Local",
    "Comment": "Using .NET Data Protection API with local key storage. Will swap to Azure Key Vault in v2.0",
    "KeyStoragePath": "./keys"
  }
}
